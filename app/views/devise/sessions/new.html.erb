<div class="center">
  <h1 class="welcome-text mb-5">
    Welcome back.
    <br>
    Let's sign in.
  </h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mb-3">
      <%= f.label :username, 'Enter your username' %><br />
      <%= f.text_field :username, autocomplete: "Username", class: "input input--underlined" %>
    </div>

    <div class="field mb-3">
      <%= f.label :password, 'And your password' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "input input--underlined" %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-dark" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
