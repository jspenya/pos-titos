<h1>Sales</h1>
<%= form_with(url: payments_path, method: :get, data: { controller: "flatpickr", flatpickr_target: "form", turbo: true }) do |form| %>
  <div class="row mb-5">
    <div class="col-md-3">
      <div class="input-group">
        <%= form.datetime_field :start_time, class: "flatpickr_start_time form-control", placeholder: "Select start date" %>
      </div>
    </div>
    <div class="col-md-3">
      <div class="input-group">
        <%= form.datetime_field :end_time, class: "flatpickr_end_time form-control", placeholder: "Select end date", data: { action: "change->flatpickr#search" } %>
      </div>
    </div>
    <div class="col-md-3">
      <%= form.submit "Submit", class: "btn btn-dark" %>
      <%= button_to "Clear Filters", payments_path, data: { turbo_frame: "_top" }, class: "btn btn-warning rounded" %>
    </div>
  </div>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Customer</th>
      <th scope="col">In-charge</th>
      <th scope="col">Payment Method</th>
      <th class="text-end" scope="col">Cash Tendered</th>
      <th class="text-end" scope="col">Order Total</th>
    </tr>
  </thead>
  <tbody id="payments">
    <%= render @payments %>
  </tbody>
  <%= render "payments_footer" %>
</table>
