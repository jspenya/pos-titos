<div class="">
  <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3">
    <span class="nav-link px-2 link-dark fw-bolder">
    </span>

    <div class="col-md-3 text-end">
      <% if user_signed_in? %>
        <%= button_to 'Log out', destroy_user_session_path, class: 'btn btn-outline-danger', style: 'margin-right:1rem;', method: :delete %>
      <% else %>
        <div class="d-flex gap-2">
          <%= button_to 'Log in', new_user_session_path, class: 'btn btn-dark', method: :get%>
          <%= button_to 'Sign up', new_user_registration_path, class: 'btn btn-light ml-3', method: :get %>
        </div>
      <% end %>
    </div>
  </header>
</div>
