<%= link_to sanitize("&larr; Back to Categories"), categories_path %>

<h2 class="page-title"><%= @category.name %></h2>

<%= link_to "New Product", new_category_product_path(@category), class: "btn btn-dark",
      data: { turbo_frame: dom_id(@category.products.new) } %>
<%= turbo_frame_tag dom_id(@category.products.new) %>

<%= turbo_frame_tag "products" do %>
  <%= render @products %>
<% end %>
