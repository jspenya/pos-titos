<%= turbo_frame_tag product do %>
  <div class="unit">
    <div class="image-container">
      <%= link_to category_product_path(@category, product) do %>
        <% if product.image.attached? %>
          <%= image_tag product.image.variant(:thumb) %>
        <% else %>
          <div class="placeholder__thumb">
            <%= image_tag "placeholder.png" %>
          </div>
        <% end %>
      <% end %>
    </div>
    <%= link_to product.name, category_product_path(@category, product), class: 'unit-title' %>
    <div class="unit__actions">
      <%= link_to "Edit Product", edit_category_product_path(@category, product) %>
    </div>
  </div>
<% end %>
