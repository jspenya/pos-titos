<%= turbo_frame_tag category do %>
  <div class="unit">
    <%= link_to category.name, category_path(category),
      data: { turbo_frame: "_top" }, class: 'unit-title' %>
    <div class="unit__actions",>
      <%= link_to "Edit Category", edit_category_path(category), class: "btn btn-warning" %>
      <%= button_to "Delete", category_path(category), method: :delete, class: "btn btn-dark",
        form: { data: { turbo_confirm: "Are you sure you want to delete this?" } } %>
    </div>
  </div>
<% end %>
