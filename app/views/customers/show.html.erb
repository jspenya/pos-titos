<div class="d-flex">
  <h1><%= @customer.name %></h1>
  <div class="ml-auto">
    <%= link_to "New Order", new_customer_order_path(@customer), class: "btn btn-primary" %>
  </div>
</div>

<% if @orders.exists? %>
  <% @orders.each do |o| %>
    <%= o.id %>
  <% end %>
<% else %>
  <h6>There are no orders for this customer.</h6>
<% end %>
