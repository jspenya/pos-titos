<%
=begin%>
 <%= link_to "New Item", new_customer_order_order_item_path(@customer, @order), class: "btn btn-dark mb-3" %> 
<%
=end%>
<div class="container mt-5">
    <h1 class="mb-4">Product Menu</h1>
    <div class = "row">
    <% @allProducts.each do |product| %>
      <div class="col-md-2 mb-3">
        <div class="card">
          <img src="<%= main_app.url_for(product.image.variant(:thumb)) %>" class="card-img-top" alt="<%= product.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><span>Pcs:</span><%= product.quantity %></p>
            <p class="card-text"><span>Price: â‚±</span><%= product.price %></p>
            <!-- Add other product details as needed -->
            <a href="#" class="btn btn-primary">Add to Orders</a>
          </div>
        </div>
      </div>
    <% end %>
    </div>
</div>


<% if @order_items.exists? %>
    <% @order_items.each do |o| %>
        <%= o.product.name %>
        <%= o.product.quantity %>
    <% end %>
<% else %>  
    <p>You currently have no items in this order.</p>
<% end %>

<%
=begin%>
 <%= render "order_items/menu", products: @products, order: @order, customer: @customer %> 
