<div class="mt-5">
  <h3 class="mb-4">Product Menu</h3>
  <div class="row">
    <div class="col-md-10">
      <%= render "customers/orders/product", products: @allProducts %>
    </div>
    <div class="col-md-2">
      <div class="items-sidebar">
        <div class="top-section">
          <!-- Content before the scrollable section -->
        </div>
        <div class="scrollable-section">
          <!-- Scrollable content goes here -->
          <div id="order_item">
            <% if @order_items.exists? %>
              <%= render 'customers/orders/order_item', locals: { grouped_similar_items_in_order: @grouped_similar_items_in_order } %>
            <% else %>
              <p>You currently have no items in this order.</p>
            <% end %>
          </div>
          <!-- Add more order items as needed -->
        </div>
        <div class="bottom-section">
          <!-- Content after the scrollable section -->
          <div id="order_total">
            <%= render 'customers/orders/total_amount', locals: { total_order_amount: @total_order_amount } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
