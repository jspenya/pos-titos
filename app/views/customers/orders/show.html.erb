<%= render "customers/orders/checkout_modal", order_items: @order_items %>
<%= render "customers/orders/pay_order" %>
<%= render "customers/orders/handlebars/order_item" %>

<%= title format("%s Order: %s", @customer.name, @order.name) %>

<div class="py-3 text-left">
  <% @categories.each do |category_id, category_name| %>
    <%= link_to category_name, customer_order_path(category_id: category_id),
      class: "mx-1 btn btn-sm btn-outline-dark", data: { turbo_stream: true } %>
  <% end %>
  <%= link_to "Clear Filters", customer_order_path(@customer, @order), class: "mx-1 btn btn-sm btn-outline-secondary" %>
</div>
<%= render "customers/orders/products", products: @products %>

<% content_for :orders_sidebar do %>
  <%= render "shared/orders_sidebar" %>
<% end %>