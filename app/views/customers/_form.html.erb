<%= form_with model: @customer, data: { turbo: 'false'} do |form| %>
  <div class="unit form">
    <% if category.errors.any? %>
      <div class="error-message">
        <%= category.errors.full_messages.to_sentence.capitalize %>
      </div>
    <% end %>


    <div>
      <%= form.text_field :name, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Enter customer name here" %>
    </div>

    <%= form.hidden_field :role, value: params[:role] %>
    <div class="unit-actions button-unit" style = "padding: 10px;">
      <%= form.submit class: 'btn btn-dark' %>
      <%= link_to "Cancel", customer_orders_tables_path, class:"btn btn-warning" %>
    </div>
  </div>
<% end %>

