<h1> Add product</h1>

<%= form_with(model: @product, url: create_product_path) do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name %>

    <%= form.label :quantity %>
    <%= form.number_field :quantity %>

    <%= form.label :price %>
    <%= form.number_field :price %>

    <%= form.collection_select :category_id, Category.all, :id, :name %>
    
    <%= form.button 'Add Product', class: 'btn btn-dark'%>
<% end %>